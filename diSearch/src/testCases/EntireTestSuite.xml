		<classes>
			<class name="testCases.DocumentDetailsValidation" />
		</classes>
	</test>

	<test name="Add New Member validation" preserve-order="true"
		enabled="true" group-by-instances="true">
		<classes>
			<class name="testCases.AddNewMember" />
		</classes>
	</test>

	<test name="Filter Search Files by Date" preserve-order="true"
